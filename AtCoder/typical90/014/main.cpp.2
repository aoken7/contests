#include<bits/stdc++.h>
#define all(a) a.begin(), a.end()
#define put(i) cout<<i<<endl
#define rep(i,s,n) for(long long i=s;i<(long long)(n);i++)
using namespace std;
using ll = long long;

ll n;
vector<ll> a,b;

int main(){
    cin >> n;
    a = b = vector<ll>(n);
    rep(i,0,n) cin >> a[i];
    rep(i,0,n) cin >> b[i];

    sort(all(a));
    sort(all(b));

    ll ans = 0;

    rep(i,0,n){
        ans += abs(a[i] - b[i]);
    }

    put(ans);
}
